#include <stdio.h>
int main()
{
    int a,fact;
    printf("enter the value whom factorial is to be find");
    scanf("%d",&a);
    fact=factorial(a);
    printf("\nfactorial value is= %d",fact);
    return 0;
}
factorial(int x)
{
    int i;
    if (x==1)
    return(1);
    else
    i=x*factorial(x-1);
    return (i);
    
}
